<!DOCTYPE html>
<html lang="ja">
  <head>
    <title><%= "#{@title} - " if @title %>HomeworkManager</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav id="common_nav" class="navbar navbar-default">
      <div class="container">
        <% if @user # ログイン状態だった場合のナビバー%>
          <div class="navbar-header" style='float: left'>
            <%= link_to 'Homework Manager', root_path, id: 'common_nav_brand', class: 'navbar-brand' %>
          </div>
          <div id="common_nav_user" class="btn-group pull-right">
            <button class="btn btn-primary dropdown-toggle navbar-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= glyphicon('user') %>
              <span class="hidden-xs"><strong><%= @user.username %></strong>さん</span>
              <span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
              <li class="dropdown-header visible-xs">
                <strong><%= @user.username %></strong>さん
              </li>
              <li>
                <%= link_to user_path do %>
                  <%= glyphicon('home') %> ユーザホーム
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path do %>
                  <%= glyphicon('cog') %> アカウント設定
                <% end %>
              </li>
              <li>
                <%# TODO: ログアウトへのパス %>
                <%= link_to '' do %>
                  <%= glyphicon('log-out') %> ログアウト
                <% end %>
              </li>
            </ul>
          </div>
        <% else # 非ログイン状態だった場合のナビバー%>
          <div class="navbar-header">
            <%= link_to 'Homework Manager', root_path, id: 'common_nav_brand', class: 'navbar-brand' %>
            <button id="common_nav_toggle" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#common_nav_target">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse" id="common_nav_target">
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'ログイン', top_login_path, class: 'text-center' %></li>
              <li><%= link_to '新規登録', new_user_path, class: 'text-center' %></li>
            </ul>
          </div>
        <% end %>
      </div>
    </nav>


    <%= yield %>


    <footer id="common_footer">
      <div class="container">
        <small class="text-muted">&copy; 2016 Homework Management Systems</small>
      </div>
    </footer>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
