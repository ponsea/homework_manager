<% provide :title, @group.name %>
<section id="groups_show" class="container">
  <article class="panel panel-primary">
    <div class="panel-heading">
      <h1><%= @group.name %></h1>
    </div>
    <pre><%= @group.detail %></pre>
    <table class="table">
      <tr>
        <th>作成者</th>
        <td><%= @group.author.name %></td>
      </tr>
      <tr>
        <th>作成日</th>
        <td><%= @group.created_at.strftime('%Y年%m月%d日') %></td>
      </tr>
      <tr>
        <th>管理者</th>
        <td><%= @group.admins.map{|a|a.name}.join(', ') %></td>
      </tr>
      <tr>
        <th>全人数</th>
        <td><%= @group.members.size %>人</td>
      </tr>
    </table>
  </article>
</section>
